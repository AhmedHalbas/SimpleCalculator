<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="#252323"
    tools:context=".MainActivity"
    android:weightSum="2">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|right"
        android:background="#393535"
        android:layout_weight="0.5"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:textSize="50sp" />



    <TableLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_weight="1">

            <Button
                android:text="7"
                android:id="@+id/btn_7"
                android:textSize="40sp"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="8"
                android:id="@+id/btn_8"
                android:textSize="40sp"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="9"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:id="@+id/btn_9"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="รท"
                android:id="@+id/btn_div"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_height="match_parent"/>

        </TableRow>


        <TableRow
            android:layout_weight="1"
           >

            <Button
                android:text="4"
                android:id="@+id/btn_4"
                android:textSize="40sp"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="5"
                android:id="@+id/btn_5"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="6"
                android:id="@+id/btn_6"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="ร"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:id="@+id/btn_mult"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </TableRow>


        <TableRow
            android:layout_weight="1"
            >

            <Button
                android:text="1"
                android:id="@+id/btn_1"
                android:textSize="40sp"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="2"
                android:id="@+id/btn_2"
                android:textSize="40sp"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="3"
                android:id="@+id/btn_3"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="-"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:id="@+id/btn_sub"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </TableRow>


        <TableRow
            android:layout_weight="1"
          >

            <Button
                android:text="0"
                android:id="@+id/btn_0"
                android:textSize="40sp"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="."
                android:id="@+id/btn_dot"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



            <Button
                android:text="C"
                android:id="@+id/btn_reset"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:text="+"
                android:id="@+id/btn_add"
                android:textSize="40sp"
                android:backgroundTint="#2b2929"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </TableRow>




        <Button
            android:text="="
            android:id="@+id/btn_equal"
            android:textSize="40sp"
            android:backgroundTint="#2b2929"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </TableLayout>






</LinearLayout>

